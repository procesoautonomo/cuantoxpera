<div id="Cxp-Breadcrumb" class="fixed flex items-center z-10 inset-x-0 top-0 max-w-xl mx-auto bg-orange-50 dark:bg-gray-950 px-5 pb-2 pt-2 ">
    <h2 class="text-lg font-extrabold text-orange-500 flex-none flex-grow mx-1">@MeetingName</h2>
    <h3 class="text-sm font-semibold text-orange-500 flex-none flex-grow-0 mx-4">@MeetingDate.ToShortDateString()</h3>
</div>

@code {
    [Parameter]
    public string MeetingName { get; set; }

    [Parameter]
    public DateTime MeetingDate { get; set; }
}
